<body>
    @*<img class="img-responsive" src="~/Content/Images/background-login.jpg" style="width:100%; height:200px" />*@

   

    <nav class="navbar navbar-inverse">
        <div class="container-fluid">

            <div class="navbar-header">
                <button class="navbar-toggle" aria-expanded="true" type="button" data-target="#bs-example-navbar-collapse-2" data-toggle="collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="~/TrangChu/Index"><i class="fa fa-home fa-5"></i></a>
            </div>

            @*<a href="#"><i class="fa fa-home fa-5"></i></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
