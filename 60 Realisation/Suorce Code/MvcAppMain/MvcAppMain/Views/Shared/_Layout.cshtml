                </button>
            <div class="navbar-collapse collapse in" id="bs-example-navbar-collapse-2" aria-expanded="true">*@

                <ul class="nav navbar-nav">
                    <li class="active">
                        <a class="nav-link" href="#">Trang chủ<span class="sr-only">(current)</span></a>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">Chức năng<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="~/HoSoBenhNhan/Create">Đăng ký thông tin bệnh nhân</a></li>
                            <li><a href="~/Thuoc/Index">Thông tin thuốc</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">Danh Sách<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="~/PhieuKhamBenh/DanhSachKhamBenh">Lập danh sách khám bệnh</a></li>
                            <li><a href="~/PhieuKhamBenh/PhieuKhamBenh">Lập phiếu khám bệnh</a></li>
                            <li><a href="~/PhieuKhamBenh/DanhSachBenhNhan">Tra cứu bệnh nhân</a></li>
                            @if (Session["Roles"].Equals("admin"))
                            {
                                <li class="divider"></li>
                                <li><a href="~/ThayDoiQuyDinh/Index">Thay đổi quy định</a></li>
                            }
                        </ul>
                    </li>

                    @if (Session["Roles"].Equals("admin"))
                    {
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">Báo cáo<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="~/HoaDon/Report">Báo cáo doanh thu theo ngày</a></li>
                                <li><a href="~/CT_PhieuKhamBenh/Report">Báo cáo sử dụng thuốc</a></li>
                            </ul>
                        </li>
                    }
                </ul>
                @*<form class="form-inline my-2 my-lg-0">
                        <input class="form-control mr-sm-2" type="text" placeholder="Tìm kiếm">
                        <button class="btn btn-secondary my-2 my-sm-0" type="submit">Tìm kiếm</button>
                    </form>*@
                <ul class="nav navbar-nav navbar-right" style="padding-left: 30px">
                    @if (Session["Username"] != null)
                    {
                        <li><a href="~/User/Login"><span class="glyphicon glyphicon-log-out"> </span> Hi! @Session["Username"].ToString()</a></li>

                    }


                    <li><a href="~/User/Create"><i class="fa fa-user-plus"></i> Đăng ký</a></li>
                </ul>

            </div>
        
